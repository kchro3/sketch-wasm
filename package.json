{
  "name": "sketch-wasm",
  "version": "0.1.0",
  "description": "Probabilistic data structures for TypeScript/Node.js via WebAssembly",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "wasm-pack build --target nodejs && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bench": "node benchmarks/run.js",
    "clean": "rm -rf dist pkg target"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "probabilistic",
    "data-structures",
    "bloom-filter",
    "hyperloglog",
    "count-min-sketch"
  ],
  "author": "kchro3",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "wasm-pack": "^0.12.0",
    "bloom-filters": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ]
  }
}